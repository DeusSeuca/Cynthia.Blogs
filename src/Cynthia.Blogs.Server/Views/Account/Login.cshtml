@model LoginInfo

<div class="container">
    <main role="main" class="pb-3">
        <h1>登陆页面</h1>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <hr />
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input class="form-control" asp-for="Username" />
                        <span class="text-danger field-validation-valid" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" />
                        <span class="text-danger field-validation-error" asp-validation-for="Password"></span>
                    </div>
                    <div class="text-danger field-validation-error" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary" name="login">登陆</button>
                </form>
            </div>
        </div>
    </main>
</div>