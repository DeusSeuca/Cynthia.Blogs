@model BlogViewModel

<div class="container">
    <main role="main" class="pb-3">
        <h1>发布文章</h1>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <hr />
                    <div class="text-danger validation-summary-valid">
                        <ul>
                            <li style="display:none"></li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input class="form-control"  asp-for="Title" />
                        <span class="text-danger field-validation-error" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Context"></label>
                        <textarea class="form-control"  asp-for="Context"></textarea>
                        <span class="text-danger field-validation-error" asp-validation-for="Context"></span>
                    </div>
                    <div class="text-danger field-validation-error" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary" name="register">发布</button>
                </form>
            </div>
        </div>
    </main>
</div>