@model BlogShowViewModel

<div class="container">
    <h1>@Model.Title</h1>
    <h6>作者:@Model.Author</h6>

    @Model.Context
    <hr />
    <h3>评论</h3>
    @if(Model.Comments!=null&&Model.Comments.Count()!=0)
    {
        @foreach(var item in Model.Comments)
        {
            <hr />
            <h5>@item.ShowName </h5>
            @item.Context
        }
    }
    else
    {
        <p>~暂时还没有评论~</p>
    }
    <hr />
    <!--comments-->
    @if(!SignInManager.IsSignedIn(User))
    {
        <p>注册用户登录后才能发表评论，请<a asp-action="Login" asp-controller="Account">登陆</a>或<a asp-action="Register" asp-controller="Account">注册</a>，访问网站首页。</p>
    }
    <form method="post">

    </form>
</div>